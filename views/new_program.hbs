<h1>Add program</h1>
<form action="/programs/new" method="POST">
  <input type="hidden" name="_csrf" value="{{ csrf }}">
  <div class="input-field">
    <input name="title" id="title" type="text" class="validate" required>
    <label for="title">Title</label>
    <span class="helper-text" data-error="Enter Title"></span>
  </div>

  <div class="input-field">
    <input name="price" id="price" type="number" class="validate" required min="1">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter Price"></span>
  </div>

  <div class="input-field">
    <input name="img" id="img" type="text" class="validate" required>
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Enter Image URL"></span>
  </div>

  <button type="submit" class="btn btn-primary">Add</button>
</form>
